{{!
    @template mod_tracker/coreissue

    Classes required for JS:
    * none

}}
<!-- coreissue -->
    <tr valign="top">
        <td colspan="4" align="left" class="tracker-issue-summary">
            {{{summary}}}
        </td>
    </tr>

{{#downlink}}
    <tr valign="top">
        <td colspan="4" align="left" class="tracker-issue-downlink">
            {{{downlink}}}
        </td>
    </tr>
{{/downlink}}

{{#uplink}}
    <tr valign="top">
        <td colspan="4" align="left" class="tracker-issue-uplink">
            {{{uplink}}}
        </td>
    </tr>
{{/uplink}}

    <tr valign="top">
        <td align="right" width="25%" class="tracker-issue-param">
            <b>{{#str}}issuenumber, tracker{{/str}}:</b>
        </td>

        <td width="25%" class="tracker-issue-value">
            {{fullid}}
        </td>

        <td align="right" width="25%" class="tracker-issue-param" >
            <b>{{#str}}status, tracker{{/str}}:</b>
        </td>

        <td width="25%" class="status-{{statuscode}} tracker-issue-value">
            <b>{{{status}}}</b>
        </td>
    </tr>

    <tr valign="top">
        <td align="right" width="25%" class="tracker-issue-param">
            <b>{{#str}}reportedby, tracker{{/str}}:</b>
        </td>

        <td width="25%" class="tracker-issue-value">
            {{{reporterpicture}}} &nbsp; {{reportername}}
        </td>

        <td align="right" width="25%" class="tracker-issue-param" >
            <b>{{#str}}datereported, tracker{{/str}}:</b>
        </td>

        <td width="25%" class="tracker-issue-value">
            {{datereported}}
        </td>
    </tr>

    <tr valign="top">

        <td align="right" width="25%" class="tracker-issue-param">
            <b>{{#str}}assignedto, tracker{{/str}}:</b>
        </td>

        <td width="25%" class="tracker-issue-value">
            {{{assignedto}}}
        </td>

        <td align="right" width="25%" class="tracker-issue-param">
            <b>{{#str}}cced, tracker{{/str}}:</b>
        </td>

        <td width="25%" class="tracker-issue-value">
            {{ccscount}}
        </td>
    </tr>

    <tr valign="top">
        <td align="right" width="25%" class="tracker-issue-param">
            <b>{{#str}}description{{/str}}:</b>
        </td>

        <td align="left" colspan="3" width="75%" class="tracker-issue-value">
            {{{description}}}
        </td>
    </tr>
<!-- /coreissue -->